<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Log into Siplog!</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs mb-3">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          class: "form-control" %>
            </div>

            <div class="form-inputs mb-3">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          class: "form-control" %>
            </div>

            <div class="form-inputs form-check mb-4">
              <%= f.input :remember_me, as: :boolean, class: "form-check-input" if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
