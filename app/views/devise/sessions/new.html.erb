<div class="container text-center">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag("Siplog_logo.png", alt: "Siplog Logo", class: "img-fluid mb-4", width: 500) %>
    </div>
    <div class="col-md-4">
      <h1>Streamline your coffee experience with Siplog</h1>
      <br>
      <h4><i class="fa-solid fa-mug-saucer" style="color: #005eff;"></i> Store your favorite coffees</h4>
      <h4><i class="fa-solid fa-screwdriver-wrench" style="color: #005eff;"></i> Keep track of your coffee tools</h4>
      <h4><i class="fa-solid fa-mountain-sun" style="color: #005eff;"></i> Learn about your coffee journey</h4>
    </div>

    <div class="col-md-4">
      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <h2 class="card-title mb-4">Log in</h2>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="mb-3">
                    <%= f.label :email, class: "form-label" %>
                    <%= f.input :email,
                                label: false,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" },
                                class: "form-control" %>
                  </div>

                  <div class="mb-3">
                    <%= f.label :password, class: "form-label" %>
                    <%= f.input :password,
                                label: false,
                                required: false,
                                input_html: { autocomplete: "current-password" },
                                class: "form-control" %>
                  </div>

                  <div class="form-check mb-3">
                    <%= f.input :remember_me, as: :boolean, class: "form-check-input" if devise_mapping.rememberable? %>
                  </div>

                  <div>
                    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
